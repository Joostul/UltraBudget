@using UltraBudget.Controllers
@model UltraBudget.ViewModels.HomePageViewModel

<html>
<head>
    <title>
        UltraBudget
    </title>
</head>
<body>
    <h1>Transactions</h1>
    <h2>@Model.Greeting</h2>
    <table>
        <tr>
            <td>Id</td>
            <td>Amount</td>
            <td>Date</td>
            <td>Type</td>
        </tr>
        @foreach (var transaction in Model.Transactions)
        {
            <tr>
                <td>
                    @Html.ActionLink("View", nameof(HomeController.Details),  new { id = transaction.Id })
                </td>
                <td>@transaction.Amount</td>
                <td>@transaction.Date.Day/@transaction.Date.Month/@transaction.Date.Year</td>
                <td>@transaction.Type</td>
            </tr>
        }
    </table>
</body>
</html>