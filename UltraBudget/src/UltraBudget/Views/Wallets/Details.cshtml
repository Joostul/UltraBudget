@model UltraBudget.Entities.Transaction

@{
    ViewBag.Title = "Transaction details";
}

<html>
<body>
    <h1>Transaction details</h1>
    <div class="form-group row">
        <div class="col-md-1">Id:</div>
        <div class="col-md-4">@Model.Id</div>
    </div>
    <div class="form-group row">
        <div class="col-md-1">Amount:</div>
        <div class="col-md-4">@Model.Amount</div>
    </div>
    <div class="form-group row">
        <div class="col-md-1">Date:</div>
        <div class="col-md-4">@Model.Date</div>
    </div>
    <div class="form-group row">
        <div class="col-md-1">Type:</div>
        <div class="col-md-4">@Model.Type</div>
    </div>
    <div class="form-group row">
        <div class="col-md-1">Category:</div>
        <div class="col-md-4">@Model.Category.Name</div>
    </div>
    <div class="form-group row">
        <div class="col-md-1">Wallet:</div>
        <div class="col-md-4">@Model.Wallet.Name</div>
    </div>
    @if (Model.Type == TransactionType.Invest)
    {
        <div class="form-group row">
            <div class="col-md-1">Price:</div>
            <div class="col-md-4">@Model.Price</div>
        </div>
    }
    <div class="form-group row">
        <div class="col-md-1">Username:</div>
        <div class="col-md-4">@User.Identity.Name</div>
    </div>
    <div class="form-group row">
        <div class="col-md-1">UserId:</div>
        <div class="col-md-4">@Model.UserId</div>
    </div>
    <div>
        <a asp-controller="Wallets" asp-action="Index" class="btn btn-default">Back</a>
    </div>
</body>
</html>