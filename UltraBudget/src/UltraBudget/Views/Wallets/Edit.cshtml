@model Transaction

@{
    ViewBag.Title = $"Edit {Model.Id}";
}

<div>
    <h1>Edit Transaction @Model.Id</h1>

    <div>
        <form method="post" asp-antiforgery="true">
            <div class="form-group row">
                <label asp-for="Amount" class="col-md-2 col-form-label"></label>
                <div class="col-md-2">
                    <input asp-for="Amount" class="form-control" />
                </div>
                <span asp-validation-for="Amount"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Date" class="col-md-2 col-form-label"></label>
                <div class="col-md-2">
                    <input asp-for="Date" class="form-control datepicker" />
                </div>
                <span asp-validation-for="Date"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Type" class="col-md-2 col-form-label"></label>
                <div class="col-md-2">
                    <select asp-for="Type" asp-items="@Html.GetEnumSelectList(typeof(TransactionType))" class="form-control"></select>
                </div>
                <span asp-validation-for="Type"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Category" class="col-md-2 col-form-label"></label>
                <div class="col-md-2">
                    <select asp-for="Category" asp-items="@ViewBag.Categories" class="form-control"></select>
                </div>
                <span asp-validation-for="Category"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Wallet" class="col-md-2 col-form-label"></label>
                <div class="col-md-2">
                    <select asp-for="Wallet" asp-items="@ViewBag.Wallets" class="form-control"></select>
                </div>
                <span asp-validation-for="Wallet"></span>
            </div>
            <div>
                <input type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>